generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Board {
  folderId Int      @id @default(autoincrement())
  name     String
  columns  Column[]
  groups   Group[]
  items    String
}

model Column {
  id      String @id @default(uuid())
  title   String
  type    String
  boardId Int
  board   Board  @relation(fields: [boardId], references: [folderId])
}

model Group {
  id      String @id @default(uuid())
  title   String
  boardId Int
  board   Board  @relation(fields: [boardId], references: [folderId])
}
