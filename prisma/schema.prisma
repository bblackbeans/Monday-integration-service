generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Board {
  folder_id Int      @id @default(autoincrement())
  name      String
  items     String
  columns   Column[]
  groups    Group[]
}

model Column {
  id      String @id @default(uuid())
  title   String
  type    String
  boardId Int
  board   Board  @relation(fields: [boardId], references: [folder_id])
}

model Group {
  id      String @id @default(uuid())
  title   String
  boardId Int
  board   Board  @relation(fields: [boardId], references: [folder_id])
}
